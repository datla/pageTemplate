{{/partial}}

{{# partial "menu" }}
    <div class="center">
        <ul>
            {{#each menuItems}}
                <li><a href="{{{this}}}.html">{{{this}}}</a></li>
            {{/each}}
        </ul>
    </div>
{{/partial}}

